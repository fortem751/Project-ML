# Azure Computer Vision API Configuration
AZURE_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_VISION_KEY=your_azure_vision_api_key_here

# Azure VM Configuration
VM_PUBLIC_IP=your_azure_vm_public_ip
VM_PORT=5000

# Azure Functions Configuration
AZURE_FUNCTIONS_ENDPOINT=https://your-function-app.azurewebsites.net/api/imgproc1
AZURE_FUNCTIONS_CODE=your_function_app_code_here

# Video Source Configuration
WEBCAM_URL=London_cam.mp4
# Alternative: RTSP stream
# WEBCAM_URL=rtsp://username:password@camera_ip:554/stream

# Processing Configuration
FRAME_INTERVAL_SECONDS=5
JPEG_QUALITY=90

# Advanced Edge Optimization Settings
TARGET_WIDTH=640
TARGET_HEIGHT=360
MOTION_THRESHOLD_AREA=5000
ADVANCED_JPEG_QUALITY=75

# Output Configuration
OUTPUT_CSV_LOCAL=database.csv
OUTPUT_CSV_VM=az_vm_results.csv
OUTPUT_CSV_AI=az_ai_results.csv
OUTPUT_CSV_MULTI=az_vm_results_multi.csv
OUTPUT_CSV_ADVANCED=az_vm_results_advanced.csv

# Model Configuration
YOLO_MODEL=yolov8n.pt
PERSON_CLASS_ID=0
VEHICLE_CLASS_IDS=2,3,5,7

# Performance Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=INFO

# Multi-Camera Configuration
ENABLE_MULTI_CAMERA=false
CAMERA_THREAD_DELAY=0.5

# Security (for production)
# API_KEY=your_custom_api_key
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
